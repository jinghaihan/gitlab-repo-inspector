{
  "name": "gitlab-repo-inspector",
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@10.17.0",
  "description": "A tool to scan GitLab groups and subgroups, list all repositories, detect monorepos, and fetch the latest tags or releases.",
  "author": "jinghaihan",
  "license": "MIT",
  "homepage": "https://github.com/jinghaihan/gitlab-repo-inspector#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jinghaihan/gitlab-repo-inspector.git"
  },
  "bugs": {
    "url": "https://github.com/jinghaihan/gitlab-repo-inspector/issues"
  },
  "keywords": [
    "gitlab",
    "repository",
    "inspector",
    "monorepo"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./cli": "./dist/cli.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "gitlab-repo-inspector": "./bin/gitlab-repo-inspector.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "start": "tsx ./src/cli.ts",
    "build": "unbuild",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "lint": "eslint",
    "deps": "taze major -I",
    "release": "bumpp && pnpm publish --no-git-checks",
    "catalog": "pncat",
    "prepare": "npx simple-git-hooks",
    "bootstrap": "pnpm install",
    "preinstall": "npx only-allow pnpm",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@clack/prompts": "catalog:node",
    "ansis": "catalog:node",
    "axios": "catalog:network",
    "cac": "catalog:node",
    "fast-xml-parser": "catalog:parser",
    "pathe": "catalog:node",
    "semver": "catalog:utils",
    "unconfig": "catalog:node",
    "yaml": "catalog:parser"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:lint",
    "@types/node": "catalog:types",
    "@types/semver": "catalog:types",
    "bumpp": "catalog:cli",
    "eslint": "catalog:lint",
    "lint-staged": "catalog:lint",
    "pncat": "catalog:cli",
    "simple-git-hooks": "catalog:lint",
    "taze": "catalog:cli",
    "tsx": "catalog:script",
    "typescript": "catalog:tsc",
    "unbuild": "catalog:build",
    "vitest": "catalog:test"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
